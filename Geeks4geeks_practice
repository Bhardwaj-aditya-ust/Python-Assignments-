# Sort according to an Array

class Solution:
    def relativeSort(self, a1, a2):
        a1.sort()
        result = []
        seen = set()

        for x in a2:
            if x in seen:
                continue
            seen.add(x)

            while x in a1:
                result.append(x)
                a1.remove(x)

        result.extend(a1)
        return result

a1 = [2, 1, 2, 3, 4]
a2 = [2, 1, 2]

sol = Solution()
print(sol.relativeSort(a1, a2))

