#  First Repeating Element


class Solution:
    def firstRepeated(self, arr):
        
        for i in range(len(arr)):  # i is index of arr
            for j in range(i + 1, len(arr)):
                if arr[i] == arr[j]:
                    return i + 1
        
        return -1       

arr = [1, 5, 3, 4, 3, 5, 6]

obj = Solution()
print(obj.firstRepeated(arr))      
        


